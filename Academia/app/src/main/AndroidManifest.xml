<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unip.com.br.activity" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AcademiaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TreinosActivity"
            android:label="@string/title_activity_treinos" >
        </activity>
        <activity
            android:name=".DietasActivity"
            android:label="@string/title_activity_dietas_view" >
        </activity>
        <activity
            android:name=".AtividadesActivity"
            android:label="@string/title_activity_atividades_view" >
        </activity>
        <activity
            android:name=".GraficosActivity"
            android:label="@string/title_activity_graficos_view" >
        </activity>
        <activity
            android:name=".DetalheTreinoActivity"
            android:label="@string/title_activity_treinos" >
        </activity>
        <activity
            android:name=".DetalheDietaActivity"
            android:label="@string/title_activity_dietas_view" >
        </activity>
        <activity
            android:name=".DescricaoDietaActivity"
            android:label="@string/title_activity_descricao_dieta" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapaActivity"
            android:label="@string/title_activity_mapa" >
        </activity>
        <activity
            android:name=".GPSActivity"
            android:label="@string/title_activity_gps" >
        </activity>
        <activity
            android:name=".MedidasActivity"
            android:label="@string/title_activity_medidas" >
        </activity>
        <activity
            android:name=".WebServiceActivity"
            android:label="@string/title_activity_web_service" >
        </activity>
    </application>

</manifest>
