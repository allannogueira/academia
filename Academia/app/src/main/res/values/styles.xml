<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/ActionBarTheme</item>

    <!-- Support library compatibility -->
    <item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar</item>
        <item name="android:title">@string/app_name</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar</item>
        <item name="title">@string/app_name</item>
    </style>

</resources>
