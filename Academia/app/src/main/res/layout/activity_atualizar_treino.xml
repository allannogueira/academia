<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:orientation="vertical">

    <TextView android:id="@+id/textViewAtualizarTreino"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="40dp"/>

    <TextView android:id="@+id/textViewSerie"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:onClick="reduzSerie"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

    <TextView android:id="@+id/textViewAtualizarTreinoI"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Atualizar Peso"/>

    <LinearLayout
        android:id="@+id/llContainerBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/branco"
            android:orientation="horizontal">

            <TextView android:id="@+id/textViewPeso"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Peso: "/>

            <EditText android:id="@+id/editPeso"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:digits="@string/onlyNumber"
                android:maxLength="3"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAtualizarPesoI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shapebutton"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_action_replay"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:text="Atualizar Peso"
            android:onClick="atualiarPeso"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>
